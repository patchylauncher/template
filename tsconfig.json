{
  "compilerOptions": {
    "incremental": true,
    // "declaration": false,
    "target": "ES2021",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "baseUrl": "src",
    "tsBuildInfoFile": "dist/tsbuildinfo.json",
    "esModuleInterop": true,
    "typeRoots": ["src/@typings", "node_modules/@types"],
    "experimentalDecorators": true,
  },
  "exclude": [
    "node_modules",
    "src/@typings"
  ],
}